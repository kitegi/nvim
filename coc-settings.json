{
  "codeLens.enable":true,
  "diagnostic.virtualText":true,
  "snippets.userSnippetsDirectory": "$VIMCONFIG/Ultisnips",
  "snippets.loadFromExtensions": false,
  "snippets.extends": {
    "cpp": [
      "c"
    ],
  },
  "diagnostic.displayByAle": false,
  "languageserver": {
    "clangd": {
      "command": "clangd",
      "filetypes": [
        "c",
        "cc",
        "cpp",
        "h",
        "hpp",
        "hxx"
      ],
      "rootPatterns": [
        ".clangd-root",
        ".clangd",
        "compile_commands.json",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": ".clangd-cache"
        },
        "highlight": {
          "lsRanges": true
        }
      }
    },
    "nim": {
      "command": "~/.nimble/bin/nimlsp",
      "filetypes": ["nim"],
      "trace.server": "verbose"
    }
  },
  "coc.preferences.previewAutoClose": false,
  "rust-analyzer.serverPath": "~/.cargo/bin/rust-analyzer",
  "python.pythonPath": "~/.local/share/python/venv/bin/python3",
  "python.formatting.blackPath": "~/.local/share/python/venv/bin/black" ,
  "python.jediEnabled": false,
  "python.formatting.provider": "black",
}
